{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "strict": true,
        "types": [
            "node"
        ],
        "baseUrl": ".",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "paths": {
            "@/*": [
                "./*"
            ],
            "@application/*": [
                "./src/application/*"
            ],
            "@infrastructure/*": [
                "./src/infrastructure/*"
            ],
            "@utils/*": [
                "./src/utils/*"
            ]
        }
    }
}