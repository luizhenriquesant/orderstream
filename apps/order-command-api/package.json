{
  "name": "order-command-api",
  "version": "1.0.0",
  "scripts": {
    "predev": "npm run predev:prisma:reset && npm run predev:prisma:migrate && npm run predev:prisma:generate",
    "dev": "tsx --watch ./src/entrypoint.ts",
    "predev:prisma:reset": "rm -rf prisma/migrations && prisma migrate reset --config=./prisma.config --force",
    "predev:prisma:migrate": "prisma migrate dev --name init --config=./prisma.config",
    "predev:prisma:generate": "prisma generate --config=./prisma.config",
    "prisma:studio": "prisma studio --port 5555 --browser none --config=./prisma.config"
  },
  "dependencies": {
    "@prisma/client": "^7.3.0",
    "dotenv": "^17.2.4",
    "fastify": "^5.7.4",
    "fastify-type-provider-zod": "^6.1.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "prisma": "^7.3.0",
    "tsx": "^4.21.0"
  }
}