{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "types": [
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./*"
            ],
            "@application/*": [
                "./src/application/*"
            ],
            "@infrastructure/*": [
                "./src/infrastructure/*"
            ],
            "@utils/*": [
                "./src/utils/*"
            ]
        }
    }
}