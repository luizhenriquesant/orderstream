{
    "compilerOptions": {
        "target": "ESnext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "strict": true,
        "types": [
            "node"
        ],
        "paths": {
            "@/*": [
                "./*"
            ],
            "@container/*": [
                "./main/container/*"
            ],
            "@shared/*": [
                "../packages/shared/*"
            ]
        }
    }
}